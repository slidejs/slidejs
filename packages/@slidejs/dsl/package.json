{
  "name": "@slidejs/dsl",
  "version": "0.1.0",
  "description": "Slide DSL 语法解析器和编译器",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src/generated/parser.js"
  ],
  "scripts": {
    "generate:parser": "peggy --format es -o src/generated/parser.js src/grammar.peggy",
    "build": "pnpm generate:parser && vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist src/generated"
  },
  "dependencies": {
    "@slidejs/core": "workspace:*",
    "@slidejs/context": "workspace:*"
  },
  "devDependencies": {
    "peggy": "^4.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "slide",
    "dsl",
    "parser",
    "compiler",
    "presentation"
  ],
  "author": "",
  "license": "MIT"
}
